.user-form-wrapper.col-md-offset-3.col-md-6
  %section.edit-user
    %ul.nav.nav-tabs
      %li.active
        %a{"data-toggle" => "tab", :href => "#home"} Profile
      %li
        %a{"data-toggle" => "tab", :href => "#profile"} Password
    #myTabContent.tab-content
      #home.tab-pane.fade.active.in
        %section.user-show-wrapper.clearfix{data: {id: 1}}
          %header.profile
            = link_to "#", class: "user-info" do
              .media.pull-left
                %img.img-circle{src: "http://via.placeholder.com/175x175"}
              %span username
              %br
              %span The best user ever!
        .user-edit-form      
          = bootstrap_form_tag url: '/update',  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f|
            = f.text_field :name, value: 'name'
            = f.text_field :username, value: 'user1'
            = f.text_field :website, value: 'user1'
            = f.text_area :bio, value: 'user1'
            = f.email_field :email, value: 'user1'
            = f.form_group do
              = f.submit "Submit", class: "btn btn-primary"
                              
      #profile.tab-pane.fade.active
        .user-edit-form
          = bootstrap_form_tag url: '/update',  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f|
            = f.password_field :old_password
            = f.password_field :new_password
            = f.password_field :confirm_new_password
            = f.form_group do
              = f.submit "Submit", class: "btn btn-primary"
            