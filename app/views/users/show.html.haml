.user-profile
  .media.profile-head
    .col-md-4.col-sm-4.col-xs-4.user-cover
      %img.img-circle.media-object{src: "http://via.placeholder.com/175x175"}
    .col-md-8.col-sm-8.col-xs-8.clearfix
      %h2.media-heading= @user.username
      - if @user == current_user
        = link_to "Edit profile", accounts_edit_path, class: "label label-default" 
      - else @user != current_user
        = link_to "Follow", "#", class: "btn btn-info" 
    .user-status
      .lead.user-record
        %span  
          %strong= @user.posts.length 
          posts
        %span 
          %strong= @user.comments.length 
          comments
        %span 
          %strong 33 
          Likes
      .lead.user-detail
        %p= @user.bio
        - if @user.website
          = link_to @user.website, display_website(@user.website), target: '_blank'

  .user-photos.clearfix
    - @user.posts.each do |post|
      %ul
        %li.col-md-4.col-sm-4.col-xs-4.no-padding.post-img-wrapper
          = link_to [@user, post] do
            .post-img{style: "background-image: url(#{post.image})"}