%ul
  - @follows.each do |user|
    %li.clearfix
      = link_to user do
        %img.small-img.img-circle(src="#{has_image?(user.avatar)}")
      .names
        = link_to user.username, user
        %small.text-muted #{user.full_name}
      .pull-right
        - follow = !current_user.follow?(user)
        - unless user == current_user
          = button_to (follow ? "Follow" : "Following"), user_follows_path(user, user_page: @user_page), class: (follow ? "btn btn-primary" : "btn btn-default"), data: {id: user.id}, remote: true